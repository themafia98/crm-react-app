{
  "name": "server",
  "version": "0.5.0",
  "private": true,
  "scripts": {
    "build": "npm run copyfiles && tsc",
    "dev": "nodemon ./src/server.ts --pretty",
    "copyfiles": "copyfiles -f -V  src/data/**/*.* build/data/ && copyfiles -f -V  src/public/**/*.ejs build/public/views && copyfiles -f -V  src/public/**/*.js build/public/ && copyfiles -f -V  src/public/**/*.css build/public/",
    "prod": "cross-env NODE_ENV=production node build/server.js"
  },
  "dependencies": {
    "bcrypt": "^3.0.6",
    "connect-mongo": "^3.0.0",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^8.1.0",
    "ejs": "^2.7.1",
    "express": "^4.17.1",
    "express-rate-limit": "^5.0.0",
    "express-session": "^1.16.2",
    "helmet": "^3.21.0",
    "lodash": "^4.17.15",
    "mongodb": "^3.3.2",
    "mongoose": "^5.7.1",
    "multer": "^1.4.2",
    "nodemailer": "^6.3.0",
    "uuid": "^3.3.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.0",
    "@types/lodash": "^4.14.141",
    "@types/mongodb": "^3.3.3",
    "@types/node": "^12.7.2",
    "@types/nodemailer": "^6.2.1",
    "@types/winston": "^2.4.4",
    "copyfiles": "^2.1.1",
    "cross-env": "^5.2.0",
    "nodemon": "^1.19.1",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  }
}
